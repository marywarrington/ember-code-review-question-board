{{#if addNewQuestion}}
  <h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="extra">Extra Information</label>
        {{input value=extra id="extra"}}
      </div>

      <button {{action 'save'}}>Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
